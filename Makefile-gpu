# Makefile

# Base directories
ROOT_DIR := $(shell pwd)
SRC_DIR := src
OBJ_DIR := obj
TARGET := sample_gpu

# Compiler settings
CXX := g++
CXXFLAGS := -std=c++17  

# Linker flags
LDFLAGS := -Wl,--rpath=lib \
	-lpthread \
	-ltensorflowlite  \
	-ltensorflowlite_gpu_delegate -lEGL -lGLESv2 

# Include paths
INCS := -Iinc \
		-I/usr/include 

# Library paths
LIBS := -L/lib \

# Source files and object files
SRCS := $(TARGET).cpp
HDRS := $(shell find $(SRC_DIR) -name '*.hpp')
OBJS := $(SRCS:%.cpp=%.o)
OBJECTS = $(patsubst %.o,$(OBJ_DIR)/%.o,$(OBJS))
DEPS = $(OBJECTS:.o=.d)

.PHONY: all clean

# Default target
all: $(TARGET)
	@echo The build completed successfully

# Object file build rule
$(OBJ_DIR)/%.o : $(SRC_DIR)/%.cpp $(HDRS)
	@mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) $(INCS) $(LIBS) -c $< -o $@ -MD $(LDFLAGS)

# Executable build rule
$(TARGET): $(OBJECTS) $(HDRS)
	$(CXX) $(CXXFLAGS) $(INCS) $(LIBS) $(OBJECTS) -o $(TARGET) $(LDFLAGS)

# Clean rule
clean:
	rm -f $(TARGET)
	rm -f $(OBJECTS)
	rm -f $(DEPS)

# Include auto-generated dependency files
-include $(DEPS)
